<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Şərh əlavə et</h4>
    <p class="mb-4">
        Zəhmət olmasa aşağıdakı xanaları doldurun*
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Şərhiniz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommnetUser" class="form-control" placeholder="Adınız və soyadınız*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="DestinationId" class="form-control" placeholder="Destinasyon Id*" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Şərh əlavə et </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"  type="text/javascript"></script>