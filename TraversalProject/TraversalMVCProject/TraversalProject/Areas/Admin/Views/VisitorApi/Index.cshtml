@model List<VisitorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api Ziyarətçi Siyahısı</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şəhər</th>
        <th>Ölkə</th>
        <th>Mail</th>
        <th>Sİl</th>
        <th>Redakte Et</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th>@item.VisitorId</th>
            <td>@item.Name</td>
            <td>@item.SurName</td>
            <td>@item.City</td>
            <td>@item.Country</td>
            <td>@item.Mail</td>
            <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorId" class="btn btn-outline-danger">Sil</a></td> 
            <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorId" class="btn btn-outline-success">Redakte Et</a></td>

        </tr>
    }
</table>
<a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-outline-primary">Yeni Ziyarətçi Girişi</a>

