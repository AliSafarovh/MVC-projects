@using EntityLayer.Concrete
@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;

}

<h1>Istifadəçinin keçmiş rezervləri</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ziyarətçi Ad Soyad</th>
        <th>İstiqamət</th>
        <th>Adam Sayı</th>
        <th>Tarix</th>
        <th>Detallar</th>
    </tr>
    @foreach (var item in Model)
    {
            count++;
        <tr>
            <td>@count</td>
            <td>###</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="#" class="btn btn-outline-primary">Detallar</a></td>
        </tr>
    }
</table>

